@model IEnumerable<JalaramTravels.ViewModel.ToPayVM>

@{
    ViewBag.Title = "PaymentToPay";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div id="content" class="content">
    <!-- begin page-header -->
    <h1 class="page-header">Pay ToPay Amout <small> </small></h1>
    <!-- end page-header -->
    <!-- begin row -->
    <div class="row">
        <div class="col-md-12">
            <!-- begin panel -->
            <div class="panel panel-inverse">
                <div class="panel-heading">
                    <div class="panel-heading-btn">
                       
                    </div>
                    <h4 class="panel-title">List</h4>
                </div>

                <div class="panel-body">
                    <div class="table-responsive">
                        <table id="data-table" class="table table-striped table-bordered nowrap" width="100%">
                            <thead>
                                <tr>
                                    <th>Sr.</th>
                                    <th>Bus Name</th>
                                    <th>Total Topay</th>
                                    <th>Total Paid</th>
                                    <th>Transaction Date</th>
                                    <th>Pay</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{int i = 1;}
                                @foreach (var item in Model)
                                {

                                    <tr class="odd gradeX">
                                        <td class="">
                                            @i
                                        </td>
                                        <td>@item.BusName</td>
                                        <td>@item.TotalTopay</td>
                                        <td>@item.TotalPaid</td>
                                        <td>@item.TransactionDateS</td>
                                        <td class="">
                                            @if (item.TransactionStatus == JalaramTravels.Models.Enums.TransactionStatus.Incomplete)
                                            {
                                                <a href="@Url.Content("~/Home/Payment/" + item.TransactionMasterID)" class="btn btn-primary m-r-5 m-b-5">
                                                    Pay
                                                </a>
                                            }
                                            else
                                            {
                                                <label>
                                                 Paid
                                            </label>
                                                
                                            }

                                        </td>
                                    </tr>
                                    i++;
                                }



                            </tbody>
                        </table>
                    </div>
                </div>

            </div>
            <!-- end panel -->
        </div>
    </div>
    <!-- end row -->
</div>

@section scripts {
}
